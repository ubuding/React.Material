{
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "iconfont"],
  "compilerOptions": {
    "target": "es2016",
    "lib": ["DOM", "es2016"],
    "jsx": "react",
    "module": "commonjs",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/modules/*"],
      "#/*": ["./src/components/*"],
      "i18n": ["./src/i18n.ts"],
      "style/*": ["./src/style/*"],
      "layout/*": ["./src/layout/*"],
      "request": ["./src/request.ts"]
    },
    "types": ["node", "webpack-env"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
